<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	
	<item android:top="0dp" android:left="0dp">
		<shape>
		    <solid android:color="#FFFFFF"/>
		    <stroke
		        android:width="2dp"
		        android:color="#329FF3" />
		    <corners
		        android:radius="0dp" />
		    <padding
		        android:left="10dp"
		        android:top="0dp"
		        android:right="10dp"
		        android:bottom="10dp" />
		    
		    <margin
		        android:left="10dp"
		        android:right="10dp"/>
		</shape>
	</item>
	<item android:top="0dp" android:left="-10dp" android:bottom="-8dp" android:right="-10dp">
		 <shape>
		     <solid android:color="#FFFFFF" />
		 </shape>
	</item>
</layer-list>