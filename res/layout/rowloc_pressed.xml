<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:baselineAligned="false" >

        <LinearLayout
            android:id="@+id/lytPinup"
            style="@style/ActionButtonsLayout" >

            <ImageView
                android:id="@+id/btnPinUp"
                style="@style/ActionButtonImage"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/action_pin_button" />

            <TextView
                android:id="@+id/lblPinUp"
                style="@style/ActionButtonText"
                android:text="@string/pin_up" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytRate"
            style="@style/ActionButtonsLayout" >

            <ImageView
                android:id="@+id/btnRate"
                style="@style/ActionButtonImage"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/action_rate_button" />

            <TextView
                android:id="@+id/lblRate"
                style="@style/ActionButtonText"
                android:text="@string/rate" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytBlock"
            style="@style/ActionButtonsLayout" >

            <ImageView
                android:id="@+id/btnBlock"
                style="@style/ActionButtonImage"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_action_block" />

            <TextView
                android:id="@+id/lblBlock"
                style="@style/ActionButtonText"
                android:text="@string/block" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytShare"
            style="@style/ActionButtonsLayout" >

            <ImageView
                android:id="@+id/btnShare"
                style="@style/ActionButtonImage"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_action_share" />

            <TextView
                android:id="@+id/lblShare"
                style="@style/ActionButtonText"
                android:text="@string/share" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>