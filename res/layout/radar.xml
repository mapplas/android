<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radar_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/radar_background"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/radar_1"
        style="@style/RadarImage"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/ic_animation_radar_1" />

    <ImageView
        android:id="@+id/radar_2"
        style="@style/RadarImage"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/ic_animation_radar_2" />

    <ImageView
        android:id="@+id/radar_3"
        style="@style/RadarImage"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/ic_animation_radar_3" />

    <ImageView
        android:id="@+id/radar_4"
        style="@style/RadarImage"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/ic_animation_radar_4" />

    <ImageView
        android:id="@+id/radar_5"
        style="@style/RadarImage"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/ic_animation_radar_5" />

    <ImageView
        android:id="@+id/radar_6"
        style="@style/RadarImage"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/ic_animation_radar_5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <com.mapplas.utils.visual.custom_views.RobotoTextView
            android:id="@+id/lblLat"
            style="@style/RadarText" />

        <com.mapplas.utils.visual.custom_views.RobotoTextView
            android:id="@+id/lblLon"
            style="@style/RadarText" />
    </LinearLayout>

</RelativeLayout>