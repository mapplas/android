<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <RelativeLayout style="@style/NavigationBar" >

        <com.mapplas.utils.visual.custom_views.RobotoTextView style="@style/NavigationBarMapplasTitle" >
        </com.mapplas.utils.visual.custom_views.RobotoTextView>

        <com.mapplas.utils.visual.custom_views.RobotoButton
            android:id="@+id/btnBack"
            style="@style/NavigationBarButton" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/White" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lytApp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:padding="2dp" >

                <RelativeLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp" >

                    <ImageView
                        android:id="@+id/imgLogo"
                        style="@style/ImageLogo"
                        android:contentDescription="@string/image_content_description" />

                    <ImageView
                        style="@style/ImageRoundLogo"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/roundc" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/app_detail_app_title_rating_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <com.mapplas.utils.visual.custom_views.RobotoTextView
                        android:id="@+id/lblTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#333333"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RatingBar
                            android:id="@+id/rbRating"
                            style="@style/custom_rating_bar_big"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:isIndicator="true"
                            android:max="5"
                            android:paddingBottom="0dp"
                            android:paddingTop="0dp"
                            android:rating="2.5" />

                        <com.mapplas.utils.visual.custom_views.RobotoTextView
                            android:id="@+id/rbRatingValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:maxLines="1"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="10dp" >

                    <com.mapplas.utils.visual.custom_views.RobotoButton
                        android:id="@+id/btnStart"
                        style="@style/AppLaunchCell" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytAction"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/White"
                android:baselineAligned="true" >

                <LinearLayout
                    android:id="@+id/lytPinup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btnPinUp"
                        style="@style/ActionButtonImage"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/action_pin_button" />

                    <com.mapplas.utils.visual.custom_views.RobotoTextView
                        android:id="@+id/lblPinUp"
                        style="@style/ActionButtonText"
                        android:text="@string/pin_up" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lytRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btnRate"
                        style="@style/ActionButtonImage"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/action_rate_button" />

                    <com.mapplas.utils.visual.custom_views.RobotoTextView
                        android:id="@+id/lblRate"
                        style="@style/ActionButtonText"
                        android:text="@string/rate" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lytBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btnBlock"
                        style="@style/ActionButtonImage"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/action_block_button" />

                    <com.mapplas.utils.visual.custom_views.RobotoTextView
                        android:id="@+id/lblBlock"
                        style="@style/ActionButtonText"
                        android:text="@string/block" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lytShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btnShare"
                        style="@style/ActionButtonImage"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/action_share_button" />

                    <com.mapplas.utils.visual.custom_views.RobotoTextView
                        android:id="@+id/lblShare"
                        style="@style/ActionButtonText"
                        android:text="@string/share" />
                </LinearLayout>
            </LinearLayout>

            <Gallery
                android:id="@+id/galleryPhotos"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bgd_ptr"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:spacing="10dp" />

            <LinearLayout
                android:id="@+id/lytDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.mapplas.utils.visual.custom_views.RobotoTextView
                    android:id="@+id/lblMoreInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="6"
                    android:paddingLeft="10dp"
                    android:paddingRight="8dp"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/image_content_description"
                    android:src="@drawable/ic_more"
                    android:visibility="gone" />
            </LinearLayout>

            <include layout="@layout/separator" />

            <LinearLayout
                android:id="@+id/lytDeveloper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <com.mapplas.utils.visual.custom_views.RobotoTextView
                    android:id="@+id/lblDeveloper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="@string/developer"
                    android:textSize="18sp" />

                <ListView
                    android:id="@+id/list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                </ListView>

                <RelativeLayout
                    android:id="@+id/more_from_developer_plus_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/moreAppsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/ic_plus" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>