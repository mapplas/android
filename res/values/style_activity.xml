<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeSynesth" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:typeface">monospace</item>
    </style>
    
   <style name="NavigationBarText">
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">fill_parent</item>
       <item name="android:layout_marginLeft">64dp</item>
       <item name="android:layout_marginRight">64dp</item>
       <item name="android:gravity">center_horizontal|center_vertical</item>
       <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
       <item name="android:textColor">@color/navigation_text_color</item>
   </style>
   
   <style name="NavigationBarButton">
       <item name="android:layout_width">64dp</item>
       <item name="android:layout_height">64dp</item>
       <item name="android:background">@drawable/menu_back_button_left</item>
   </style>
</resources>